cabal-version:       >=1.10
build-type:          Simple
Category:            Compiler
Synopsis:            R-to-Haskell translator and interoperability solution.
-- description:
cabal-version:       >=1.10

source-repository head
  type:     git
  location: git://github.com/ps-labs/H.git

library
  exposed-modules:     Data.Some
                       H
                       H.Constraints
                       H.HExp
                       H.HVal
                       H.Module
                       H.Prelude
                       H.Value
                       Foreign.R
                       Foreign.R.Type
                       Foreign.R.Embedded
                       Foreign.R.Interface
                       Foreign.R.Parse
                       Language.R
                       Language.R.Interpreter
  hs-source-dirs:      src
  c-sources:           cbits/missing_r.c
  include-dirs:        cbits
  build-depends:       base >= 4.6 && < 4.7
                     , bytestring >= 0.10
                     , pretty >= 1.1
                     , async >= 2.0
                     , stm >= 2.4
                     , text >= 0.11
                     , vector >= 0.10
  default-language:    Haskell2010
  default-extensions:  DataKinds
                       FlexibleInstances
                       FlexibleContexts
                       GeneralizedNewtypeDeriving
                       KindSignatures
                       MultiParamTypeClasses
                       StandaloneDeriving
                       TypeOperators
  other-extensions:    CPP
                       ForeignFunctionInterface
  build-tools:         c2hs
  pkgconfig-depends:   libR >= 3.0

executable H
  main-is:             Main.hs
  build-depends:       base >= 4.6 && < 4.7
                     , cmdargs >= 0.10.5
                     , pretty >= 1.1
                     , stm >= 2.4
                     , async >= 2.0
                     , process >= 1.0
                     , setenv >= 0.1.1
                     , vector >= 0.10
                     , bytestring >= 0.10
                     , H
  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:  DataKinds
                       FlexibleInstances
                       FlexibleContexts
                       GeneralizedNewtypeDeriving
                       KindSignatures
                       MultiParamTypeClasses
                       StandaloneDeriving
                       TypeOperators

Test-Suite tests
  main-is:             tests.hs
  type:                exitcode-stdio-1.0
  build-depends:       H
                     , base >= 4.6 && < 4.7
                     , filepath >= 1.3
                     , mtl >= 2.0
                     , process >= 1.1
                     , tasty >= 0.3 && < 0.4
                     , tasty-golden >= 2.1
                     , text >= 0.11
  ghc-options:         -Wall
  hs-source-dirs:      tests
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
